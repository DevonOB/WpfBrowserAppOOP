<Window x:Class="WpfBrowserAppOOP.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBrowserAppOOP"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Can you read me" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Height="102" Width="232" FontSize="24" Grid.Row="1"/>

        <Menu Grid.ColumnSpan="3" Margin="0,0,0,126">
            <MenuItem Name="itemOne" Header="Item One"/>
            <MenuItem Name="itemTwo" Header="Item Two"/>
            <MenuItem Name="itemThree" Header="Item Three"/>
            <MenuItem Name="itemFour" Header="Item Four"/>
        </Menu>
    </Grid>
</Window>
